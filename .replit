run = "dotnet run --project src/FoodPricer/FoodPricer.csproj  -- \"assiette\" \"couscous\" \"coca\" \"moyen\" \"baba\" \"normal\" \"yes\""
entrypoint = ".lesson/instructions.md"

hidden = ["bin", "obj","**/bin","**/obj"]

[env]
DOTNET_NOLOGO = "1"
DOTNET_CLI_TELEMETRY_OPTOUT = "1"

[packager]
language = "dotnet"

[packager.features]
packageSearch = true

[nix]
channel = "stable-21_11"

[languages.csharp]
pattern = "**/*.cs"

  [languages.csharp.languageServer]
  start = ["omnisharp", "--languageserver"]